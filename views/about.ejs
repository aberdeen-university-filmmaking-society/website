          <div id="committee-list" class="com-list">
              <% committee_selected.members.forEach(member=>{ %>
                <div class="com-member <% if(member.position && member.position.toLowerCase() == 'president') { %>com-fullwidth<% } %>">
                  <img class="com-memberavatar" src="<%= (member.image || "data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=") %>">
