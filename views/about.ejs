          <script>
            let all_committees = JSON.parse(`<%- JSON.stringify(locals.committee) %>`);
            let committee_selected_index = JSON.parse(`<%- JSON.stringify({index: committee_selected_index}) %>`).index;

            function previousCommittee(e){
              e.preventDefault();
              if(all_committees[committee_selected_index+1]){
                committee_selected_index++;
                selectCommittee();
              }
              return false;
            }
            function nextCommittee(e){
              e.preventDefault();
              if(all_committees[committee_selected_index-1]){
                committee_selected_index--;
                selectCommittee();
              }
              return false;
            }

            function selectCommittee(){

              if (history.replaceState) {
                  var newurl = window.location.protocol + "//" + window.location.host + window.location.pathname + '?committee='+encodeURIComponent(all_committees[committee_selected_index].name);
                  window.history.replaceState({path:newurl},'',newurl);
              }

              $("#committee-name").text(all_committees[committee_selected_index].name);
              if(all_committees[committee_selected_index].subtitle)
                $("#committee-subtitle").text(all_committees[committee_selected_index].subtitle).attr('style', '');
              else{
                $("#committee-subtitle").html("&nbsp;").attr('style',"user-select:none;");
              }
              $("#committee-list").empty();
              all_committees[committee_selected_index];
              for (let i = 0; i < all_committees[committee_selected_index].members.length; i++) {
                const member = all_committees[committee_selected_index].members[i];
                let classes = "com-member";
                console.log(member);
                if(member.position && member.position.toLowerCase().trim()=="president"){
                  classes = "com-member com-fullwidth";
                }
                $("#committee-list").append(
                  `<div class="${classes}">
                    <img class="com-memberavatar" src="${(member.image || "data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=")}">
                    <div class="com-title">${member.position}</div>
                    <div class="com-name">${member.name}</div>
                  </div>`
                );
              }
              if(all_committees[committee_selected_index-1]){
                $("#committee-next").removeClass('disabled');
                $("#committee-next").attr('href', "?committee=" + encodeURIComponent(all_committees[committee_selected_index-1].name));
              }      
              else{
                $("#committee-next").addClass('disabled');
                $("#committee-next").attr('href', "");
              }
 
              if(all_committees[committee_selected_index+1]){
                $("#committee-prev").removeClass('disabled');
                $("#committee-next").attr('href', "?committee=" + encodeURIComponent(all_committees[committee_selected_index+1].name));
              }
              else{
                $("#committee-prev").addClass('disabled');
                $("#committee-next").attr('href', "");
              }
            }
          </script>
